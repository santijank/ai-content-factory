            "expr": "service_content_engine_health",
            "refId": "A",
            "legendFormat": "Content Engine"
          },
          {
            "expr": "service_platform_manager_health",
            "refId": "B",
            "legendFormat": "Platform Manager"
          },
          {
            "expr": "service_trend_monitor_health",
            "refId": "C",
            "legendFormat": "Trend Monitor"
          }
