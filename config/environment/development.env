# AI Content Factory - Development Environment Configuration
# Copy this file to .env for local development

# ========================
# Environment Settings
# ========================
NODE_ENV=development
APP_ENV=development
DEBUG=true
VERBOSE_LOGGING=true

# ========================
# Application Settings
# ========================
APP_NAME="AI Content Factory"
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
API_BASE_URL=http://localhost:5000
WEB_DASHBOARD_URL=http://localhost:3001

# Server Configuration
PORT=5000
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ========================
# Database Configuration
# ========================
# PostgreSQL Database
DATABASE_URL=postgresql://admin:dev_password@localhost:5432/ai_content_factory_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_content_factory_dev
DB_USER=admin
DB_PASSWORD=dev_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Redis Cache (Optional for development)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================
# AI Services Configuration
# ========================
# Default Quality Tier (budget/balanced/premium)
DEFAULT_QUALITY_TIER=budget

# Text AI Services
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-70b-8192
GROQ_MAX_TOKENS=4096

OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2048

CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=1024

# Image AI Services
STABILITY_API_KEY=your_stability_api_key_here
LEONARDO_API_KEY=your_leonardo_api_key_here
MIDJOURNEY_API_KEY=your_midjourney_api_key_here

# Audio/TTS Services
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus

# ========================
# Platform Integration
# ========================
# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# TikTok API
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# Instagram Basic Display API
INSTAGRAM_CLIENT_ID=your_instagram_client_id_here
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret_here

# Facebook Graph API
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Twitter API v2
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# ========================
# Trend Collection Sources
# ========================
# Google Trends
GOOGLE_TRENDS_API_KEY=your_google_trends_api_key_here

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=ai-content-factory-dev:v1.0.0

# ========================
# File Storage
# ========================
# Local file storage for development
STORAGE_TYPE=local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB

# AWS S3 (for testing cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-content-factory-dev

# ========================
# Security Settings
# ========================
# JWT Settings
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Settings
SESSION_SECRET=dev_session_secret_change_in_production
SESSION_MAX_AGE=86400000

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000

# ========================
# Email Configuration (for notifications)
# ========================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@localhost
EMAIL_ENABLED=false

# ========================
# Monitoring & Analytics
# ========================
# Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_ENABLED=false

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ========================
# N8N Workflow Configuration
# ========================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=dev_password

# ========================
# Development Tools
# ========================
# Hot reload settings
HOT_RELOAD=true
WATCH_FILES=true

# Seed data
SEED_DATABASE=true
CREATE_SAMPLE_DATA=true

# Mock external services for development
MOCK_AI_SERVICES=false
MOCK_PLATFORM_APIS=false
MOCK_EXTERNAL_APIS=false

# Development API endpoints
DEV_API_DELAY=100
DEV_SIMULATE_ERRORS=false

# ========================
# Logging Configuration
# ========================
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_FILE=./logs/development.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Database query logging
DB_LOGGING=true
DB_LOG_QUERIES=true

# ========================
# Performance Settings
# ========================
# Cache TTL (in seconds)
CACHE_TTL=300
CACHE_ENABLED=true

# Background job processing
QUEUE_ENABLED=true
QUEUE_CONCURRENCY=2

# Content generation limits
MAX_CONCURRENT_GENERATIONS=3
CONTENT_TIMEOUT=300000

# ========================
# Feature Flags
# ========================
FEATURE_TREND_ANALYSIS=true
FEATURE_CONTENT_GENERATION=true
FEATURE_PLATFORM_UPLOAD=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_ADVANCED_AI=false

# ========================
# Development Debugging
# ========================
# Enable debug panels
ENABLE_DEBUG_TOOLBAR=true
ENABLE_QUERY_INSPECTOR=true
ENABLE_PROFILER=true

# API response formatting
PRETTY_JSON=true
INCLUDE_STACK_TRACE=true

# ========================
# Testing Configuration
# ========================
TEST_DATABASE_URL=postgresql://admin:test_password@localhost:5432/ai_content_factory_test
TEST_REDIS_URL=redis://localhost:6379/1

# Integration test settings
INTEGRATION_TESTS_ENABLED=true
E2E_TESTS_ENABLED=false
HEADLESS_BROWSER=true

# ========================
# Backup & Maintenance
# ========================
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7

# ========================
# Localization
# ========================
DEFAULT_LANGUAGE=th
SUPPORTED_LANGUAGES=th,en
TIMEZONE=Asia/Bangkok

# ========================
# Development Notes
# ========================
# This configuration is for development only
# Never use these settings in production
# Change all passwords and secrets before deploying
# Set MOCK_* to true to avoid API costs during development